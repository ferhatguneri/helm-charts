# =============== Deprecated Redis =============== #

helm install redis --version 4.4.4\
  --set replicas=3 \
  --set persistentVolume:size=1Gi \
  --set persistentVolume:reclaimPolicy=Retain \
  --set redis:config:timeout="1000" \
    stable/redis-ha --namespace services
    
Rancher

---
  replicas: "3"
  persistentVolume:
    enabled: false
  redis:
    config:
      timeout: "1000"



# =============== Bitnami Redis =============== #

helm repo add bitnami https://charts.bitnami.com/bitnami

helm install redis \
  --set usePassword=true,auth.password=passwordo,cluster.enabled=true,architecture=replication,replica.replicaCount=2,replica.persistence.enabled=false,master.persistence.enabled=false \
    bitnami/redis -n backend
